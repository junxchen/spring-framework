<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "https://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="aopAdvice" class="org.springframework.tests.aop.my.AopAdvice"/>

	<bean id="aopTestMethod" class="org.springframework.tests.aop.my.AopTestMethod"/>

	<bean id="proxyAop" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>org.springframework.tests.aop.my.TestProxyInterface</value>
		</property>
		<property name="target">
			<ref bean="aopTestMethod"></ref>
		</property>
		
		<property name="interceptorNames">
			<list>
				<value>aopAdvice</value>
			</list>
		</property>
	</bean>



</beans>
